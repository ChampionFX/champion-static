<form id="verify-email-form" class="frm-verify-email">
    <div class="row signup-box align-items-center">
        <div class="col d-flex align-self-center">
            <input class="clean-input" autocomplete="off" name="email" id="email" maxlength="50" placeholder="[% l('Enter your email') %]">
            <button class="button" id="btn-verify-email" type="submit">[% l('Create Free Account') %]</button>
            <span class="error-msg hint color-white center-text hidden" id="signup_error"></span>
        </div>
    </div>
</form>
